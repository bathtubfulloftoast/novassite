---
// ill kill you all eventually
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

// except you, you can stay.
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('trailers')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

import '/src/styles/blogposts.css';
import '/src/styles/colors.css';

---

<!doctype html>
<html lang="en">
<meta charset="utf-8" />

<head>
<title>Trailer Archive</title>
<meta name="viewport" content="width=device-width" />


<meta content="Trailer Archive" property="og:title" />
<meta content="all previous trailers for novassits" property="og:description" />
<meta content="/media/embeds/main.png" property="og:image" />
<meta content="#6b0059" data-react-helmet="true" name="theme-color" />

<script src="/src/scripts/click.js"></script>
</head>

<body>
<div class="topbox">
<h1>Trailer Archive</h1>
</div>

{
posts
.filter(posts => !posts.data.hidden)
.map((post) => (
<div class="box">
<a href={`/trailer/${post.id}/`}>
<h2 class="title">{post.data.title}</h2>
</a>
<FormattedDate date={post.data.pubDate} />
</div>
<br>

))
}
</body>
</html>
