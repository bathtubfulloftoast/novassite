async function grab() {
let servertime = 0;
let processtime = 0;

try {
const response = await fetch('/api/stats');
// const response = await fetch('/stats.json');
if (!response.ok) {
document.getElementsByClassName("center-screen")[0].innerHTML = "<h2>failed to grab uptime.</h2>"
}

const data = await response.json();

servertime = data.uptime.server_timestamp*1000;
processtime = data.uptime.process_timestamp*1000;
} catch (err) {
console.warn(err);
}

countdown(servertime, "server");
countdown(processtime, "process");
}

await grab();
});
</script>
