<button id="button">take me to a random site</button>

<script>
async function randomsite() {
const response = await fetch('/sites.txt');
const encodedtext = await response.text();
const text = atob(encodedtext);
const sites = text.split("\n").map(name => name.trim()).filter(name => name);
const maxsites = sites.length;
const siteid = Math.floor(Math.random() * maxsites);
let url = sites[siteid];
window.open(`//${url}`, '_blank').focus();
}
// but mom i want [THE STATIC FILE TO GET CACHED]
// YOURE GETTING [file regrabbed upon request]
document.getElementById("button").onclick = function() { randomsite(); };
</script>
