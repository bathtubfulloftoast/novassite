<script>
let Year;
let countDownDate;
let downdate;

Year = new Date().getFullYear();

countDownDate = `${Year}-06-09 1:13 PM`;
downdate = new Date(`${Year}-06-09 1:13 PM`);

if (downdate < Date.now()) {
Year = Year+1;
countDownDate = `${Year}-06-09 1:13 PM`;
}

window.location.replace(`/misc/countdown#${countDownDate}`);
</script>
