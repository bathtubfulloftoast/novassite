<head>
<!-- clone of cant-not-tweet-this.com but with tom scott. -->
<style is:global>
body {
cursor:pointer;
overflow:hidden;
width:100vw;
height:100vh;
}

#mouse {
width:50px;
height:25px;
display:block;
position:absolute;
background:black;
z-index:5;
}

#mouse img {
width:100%;
height:100%;
}

#bg {
display:block;
position:absolute;
left:0px;
top:0px;
width:100vw;
height:100vh;
background:#2ec7c9;
text-align:center;
vertical-align:center;
line-height: 100vh;
color:#7fe9eb;
font-size:10vw;
font-family: Verdana, sans-serif;
font-weight:bold;
}

</style>
</head>

<body>
<div id="bg">CAN'T</div>

<div id="mouse"><img src="/bot/tom.png"></div>
</body>

<script>
document.addEventListener('mousemove', function(event) {
var mouseX = event.clientX;
var mouseY = event.clientY;

document.getElementById("mouse").style.left = mouseX-25;
document.getElementById("mouse").style.top = mouseY-12;
});
</script>

<script>
const button = document.body;

button.addEventListener("mouseup", (e) => {
switch (e.button) {
case 0:
window.open('https://www.youtube.com/@TomScottGo', '_top');
break;
}
});

button.addEventListener("contextmenu", (e) => {
e.preventDefault();
});
</script>

<script>
const textarr = ["CAN'T","NOT","TOM","THIS"];
let counter = 0;


async function textloop() {
for (;;) {
if(counter >= textarr.length-1) {
counter = 0;
} else {
counter++;
}

await new Promise(r => setTimeout(r, 700));
document.getElementById("bg").innerHTML = textarr[counter];

}
};

textloop();

</script>
