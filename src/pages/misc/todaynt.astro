<script>
const now = new Date();
let day = now.getDay()

const days = ["sunday","monday","tuesday","wednesday","thursday","friday","saturday"] // mondays the first day of the week actually.

const removed = days.filter(num => num !== days[day]);
const max = removed.length;
const random = Math.floor(Math.random()*max);
document.body.innerHTML = "";

const wrap = document.createElement("div");
wrap.className="center-screen";

const text = document.createElement("h1");
text.innerHTML = removed[random];

document.body.appendChild(wrap);
wrap.appendChild(text);

</script>
