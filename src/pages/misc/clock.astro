<head>
<title id="title">3:00:00 AM</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style is:global>
@font-face { font-family: Segment; src: url('/fonts/7-segments-display.ttf'); }

body {
    font-family:Segment;
    overflow:hidden;
    color:#fff;
    background-color:#000;
    user-select:none;
}

h1 {
    filter: drop-shadow(0px 0px 5px #fff);

}

#ampm {
font-family: Arial, sans-serif;
font-weight: bold;
font-size:5vw;
padding:-10px;
}

.content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    min-height: 100vh;
    font-size:10vw;
}

blink {
    animation: blinker 2s step-start infinite;
    font-family: Arial, sans-serif;
    letter-spacing: 15px;


}

@keyframes blinker {
    50% {
        opacity: 0;
    }

}

@media screen and (max-width: 1280px){
.content {
    font-size:6vw;
}

h1 {
filter: drop-shadow(0px 0px 3px #fff);
}

}

#minute {
letter-spacing: 10px;
}

#hour {
letter-spacing: 10px;
}

</style>

<!--Embed-->
<meta content="Clock" property="og:title" />
<meta content="would you look at the time!" property="og:description" />
<meta content="#000" data-react-helmet="true" name="theme-color" />
</head>

<div class="content">
<h1><span id="hour">3</span><blink>:</blink><span id="minute">00</span><span id="ampm">AM</span></h1>
</div>

<script>
function displayTime() {
    let now = new Date();
    let hours = now.getHours();
    let minutes = now.getMinutes();
    let seconds = now.getSeconds();
    let ampm = hours >= 12 ? 'PM' : 'AM';

    // Convert 24-hour format to 12-hour format
    hours = hours % 12;
    hours = hours ? hours : 12; // If hour is 0, set it to 12

    // Add leading zeros to minutes if needed
    minutes = minutes < 10 ? '0' + minutes : minutes;

    // Display the result
    document.getElementById("hour").innerHTML = hours;
    document.getElementById("minute").innerHTML = minutes;
    document.getElementById("ampm").innerHTML = ampm;
    document.getElementById("title").innerHTML = hours + ":" + minutes + ":" + seconds + " " + ampm;
}

// Update the time every second
setInterval(displayTime, 1000);

// Call the function to display time immediately when the page loads
displayTime();
</script>
