---
import { type CollectionEntry, getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, video, pubDate } = Astro.props;

import '/src/styles/trailer.css';
import '/src/styles/colors.css';
---
<head>
<title>{title}</title>
<meta content={title} property="og:title" />
<meta content="a trailer for novassite." property="og:description" />
<meta content="#6b0059" data-react-helmet="true" name="theme-color" />
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<div class="content">
<h1>{title}</h1>
<video controls src={"/media/trailers/"+video}></video>
<p><FormattedDate date={pubDate} /><br><br>
<slot />
</p>

</div>
